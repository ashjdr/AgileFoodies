<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SearchRecipeFragment">

    <!-- TODO: Update blank fragment layout -->

    <EditText
        android:id = "@+id/search_term_recipe_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/buttonSearch_recipe_name"
        android:hint="Search recipe names: " />

    <Button
        android:id="@+id/buttonSearch_recipe_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="searchButton" />

    <EditText
        android:id="@+id/search_term_ingredients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/buttonSearch_ingredients"
        android:hint="Search recipe names: " />

    <Button
        android:id="@+id/buttonSearch_ingredients"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="searchButton" />

</RelativeLayout>